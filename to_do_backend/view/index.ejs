<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>to-do-list</title>
  </head>
  <body>
    <div>
      <form action="/add/todos" method="post">
        <input type="text" name="todos" id="" />
        <button>submit</button>
      </form>


      <ul>
        <% todo.forEach(todos => { %>
          <li>
            <%= todos.todo %> 
            <a href="/delete/todos/<%= todos._id %>" style="color:red;">Delete</a>
          </li>
        <% }) %>
      </ul>

    </div>
  </body>
</html>
